# Example environment variables for the backend
# Secrets are loaded from Azure Key Vault at runtime.
# Provide real values in `.env` when running the server.
PORT=3000
# Avoid setting PORT=80 in production; Azure App Service supplies its own port.

# Azure Key Vault containing secrets
KEY_VAULT_NAME=<your-key-vault-name>

# Database connection
DB_USER=<db-user>
DB_PASSWORD_SECRET=<db-password-secret>
DB_SERVER=<db-server>
DB_NAME=<db-name>

# File uploads
AZURE_STORAGE_ACCOUNT=<storage-account>
UPLOAD_CONTAINER=<container-name>

# SMTP fallback settings
SMTP_HOST=<smtp-host>
SMTP_USER=<smtp-user>
SMTP_PASS=<smtp-pass>

# Stripe configuration
STRIPE_SECRET_KEY=<stripe-secret-key>
STRIPE_WEBHOOK_SECRET=<stripe-webhook-secret>
STRIPE_PUBLISHABLE_KEY=<stripe-publishable-key>